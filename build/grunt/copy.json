{
  "debug": {
    "files": [{
      "expand":   true,
      "cwd":      "dist/tmp/scripts",
      "src":      [ "**/*.js" ],
      "dest":     "dist/tmp/scripts",
      "ext":      ".min.js"
    },
    {
      "expand":   true,
      "cwd":      "dist/tmp/styles",
      "src":      [ "**/*.css" ],
      "dest":     "dist/tmp/styles",
      "ext":      ".min.css"
    }]
  },

  "release": {
    "files": [
    {
      "expand":   true,
      "cwd":      "src/scripts",
      "src":      [ "**/*.js" ],
      "dest":     "dist/tmp/scripts",
      "ext":      ".js"
    },
    {
      "expand":   true,
      "cwd":      "src/styles",
      "src":      [ "**/*.css" ],
      "dest":     "dist/tmp/styles",
      "ext":      ".css"
    }]
  },

  "finalize": {
    "files": [{
      "expand":   true,
      "cwd":      "src",
      "src":      [ "**/*.html" ],
      "dest":     "dist"
    },
    {
      "expand":   true,
      "src":      [ "assets/*" ],
      "dest":     "dist"
    },
    {
      "expand":   true,
      "cwd":      "dist/tmp",
      "src":      [ "**/*.min.*" ],
      "dest":     "dist"
    }]
  }
}
